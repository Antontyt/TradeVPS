    </gs:UserList>
 
    <!-- GeoID -->
    <gs:LocationPreferences> 
        <gs:GeoID Value="203"/>
    </gs:LocationPreferences>
 
    <gs:MUILanguagePreferences>
        <gs:MUILanguage Value="en-US"/>
	</gs:MUILanguagePreferences>
 
    <!-- system locale -->
    <gs:SystemLocale Name="en-US"/>

        <!-- input preferences -->
    <gs:InputPreferences>
		<gs:InputLanguageID Action="add" ID="0409:00000409" Default="false"/>
	</gs:InputPreferences>

    <!-- user locale -->
    <gs:UserLocale>
        <gs:Locale Name="ru-RU" SetAsCurrent="true" ResetAllSettings="true">
        </gs:Locale>
    </gs:UserLocale>
  
 </gs:GlobalizationServices>